<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e5e7e9"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/redcard"
        android:textStyle="bold"
        android:textSize="20sp"

        android:text="Secuirty"/>

    <com.google.android.material.card.MaterialCardView

        app:cardElevation="7dp"
        android:id="@+id/redcard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#f0737b"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sos"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/redcard"
        app:layout_constraintStart_toStartOf="@+id/redcard"
        />
    <TextView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="15sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/i_case_of_emergency_call_your_people_you_want_and_this_for_that_only_have_a_good_day"
        app:layout_constraintStart_toStartOf="@+id/redcard"
        app:layout_constraintEnd_toStartOf="@+id/images"
        android:elevation="8dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/sos"
        />
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/images"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toTopOf="@id/redcard"
        app:layout_constraintEnd_toEndOf="@+id/redcard"

        android:elevation="8dp"
        android:src="@drawable/help"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/greencard"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#63d2c8"
        app:cardCornerRadius="20dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redcard" />

    <TextView
        android:id="@+id/gaurd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARD"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/greencard"
        app:layout_constraintStart_toStartOf="@+id/greencard"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:elevation="8dp"
        android:text="@string/i_case_of_emergency_call_your_people_you_want_and_this_for_that_only_have_a_good_day"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/redcard"
        app:layout_constraintStart_toStartOf="@+id/redcard"
        app:layout_constraintTop_toBottomOf="@+id/gaurd" />



</androidx.constraintlayout.widget.ConstraintLayout>